<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.jamesoneill.three_in_a_row.Settings"
    tools:showIn="@layout/activity_settings">

    <TabHost
        android:id="@+id/tabHost"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/colorPreview"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TabWidget
                android:id="@android:id/tabs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <FrameLayout
                android:id="@android:id/tabcontent"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:id="@+id/default_color"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/default_red_label"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Red" />

                    <SeekBar
                        android:id="@+id/default_red_seek"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:max="255"
                        android:progressBackgroundTint="@color/redSeekBar"
                        android:progressTint="@color/redSeekBar" />

                    <TextView
                        android:id="@+id/default_green_label"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Green" />

                    <SeekBar
                        android:id="@+id/default_green_seek"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:max="255"
                        android:progressBackgroundTint="@color/greenSeekBar"
                        android:progressTint="@color/greenSeekBar" />

                    <TextView
                        android:id="@+id/default_blue_label"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Blue" />

                    <SeekBar
                        android:id="@+id/default_blue_seek"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:max="255"
                        android:progressBackgroundTint="@color/blueSeekBar"
                        android:progressTint="@color/blueSeekBar" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/color_1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/color_1_red_label"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Red" />

                    <SeekBar
                        android:id="@+id/color_1_red_seek"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:max="255"
                        android:progressBackgroundTint="@color/redSeekBar"
                        android:progressTint="@color/redSeekBar" />

                    <TextView
                        android:id="@+id/color_1_green_label"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Green" />

                    <SeekBar
                        android:id="@+id/color_1_green_seek"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:max="255"
                        android:progressBackgroundTint="@color/greenSeekBar"
                        android:progressTint="@color/greenSeekBar" />

                    <TextView
                        android:id="@+id/color_1_blue_label"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Blue" />

                    <SeekBar
                        android:id="@+id/color_1_blue_seek"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:max="255"
                        android:progressBackgroundTint="@color/blueSeekBar"
                        android:progressTint="@color/blueSeekBar" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/color_2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/color_2_red_label"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Red" />

                    <SeekBar
                        android:id="@+id/color_2_red_seek"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:max="255"
                        android:progressBackgroundTint="@color/redSeekBar"
                        android:progressTint="@color/redSeekBar" />

                    <TextView
                        android:id="@+id/color_2_green_label"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Green" />

                    <SeekBar
                        android:id="@+id/color_2_green_seek"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:max="255"
                        android:progressBackgroundTint="@color/greenSeekBar"
                        android:progressTint="@color/greenSeekBar" />

                    <TextView
                        android:id="@+id/color_2_blue_label"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Blue" />

                    <SeekBar
                        android:id="@+id/color_2_blue_seek"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:max="255"
                        android:progressBackgroundTint="@color/blueSeekBar"
                        android:progressTint="@color/blueSeekBar" />
                </LinearLayout>
            </FrameLayout>
        </LinearLayout>
    </TabHost>

    <View
        android:id="@+id/colorPreview"
        android:layout_width="match_parent"
        android:layout_height="18dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</android.support.constraint.ConstraintLayout>
